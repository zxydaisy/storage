{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ],
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "./src/**/*",
    "./server/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}